{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://uicontract.dev/schemas/manifest.v1.json",
  "title": "UIC Manifest v1",
  "description": "UI Contracts manifest file describing interactive elements in a web application.",
  "type": "object",
  "required": ["schemaVersion", "generatedAt", "generator", "metadata", "elements"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "Semantic version of the manifest schema (major.minor)."
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 datetime when the manifest was generated."
    },
    "generator": {
      "type": "object",
      "required": ["name", "version"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["framework", "projectRoot", "filesScanned", "elementsDiscovered", "warnings"],
      "additionalProperties": false,
      "properties": {
        "framework": {
          "type": "string",
          "minLength": 1
        },
        "projectRoot": {
          "type": "string",
          "minLength": 1
        },
        "filesScanned": {
          "type": "integer",
          "minimum": 0
        },
        "elementsDiscovered": {
          "type": "integer",
          "minimum": 0
        },
        "warnings": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "agentId",
          "type",
          "filePath",
          "line",
          "column",
          "componentName",
          "route",
          "label",
          "handler",
          "attributes",
          "conditional",
          "dynamic"
        ],
        "additionalProperties": false,
        "properties": {
          "agentId": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9.-]*$",
            "minLength": 1,
            "description": "Hierarchical dot-separated identifier for the element."
          },
          "type": {
            "type": "string",
            "minLength": 1
          },
          "filePath": {
            "type": "string",
            "minLength": 1
          },
          "line": {
            "type": "integer",
            "minimum": 1
          },
          "column": {
            "type": "integer",
            "minimum": 1
          },
          "componentName": {
            "type": ["string", "null"]
          },
          "route": {
            "type": ["string", "null"]
          },
          "label": {
            "type": ["string", "null"]
          },
          "handler": {
            "type": ["string", "null"]
          },
          "attributes": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "conditional": {
            "type": "boolean"
          },
          "dynamic": {
            "type": "boolean"
          },
          "directive": {
            "type": ["string", "null"],
            "enum": ["use client", "use server", null],
            "description": "React Server Component directive detected at file level."
          }
        }
      }
    }
  }
}
